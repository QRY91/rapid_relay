{% extends 'base.html.twig' %}

{% block title %}Relay{% endblock %}

{% block body %}
    <h1>Relay</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ relay.name }}</td>
            </tr>
        </tbody>
    </table>
    <ul class="disciplines">
        {% for discipline in relay.disciplines %}
            <li>{{ discipline.name }}</li>
        {% endfor %}
    </ul>

    <a href="{{ path('app_relay_index') }}">back to list</a>

    <a href="{{ path('app_relay_edit', {'id': relay.id}) }}">edit</a>

    {{ include('relay/_delete_form.html.twig') }}
{% endblock %}
